<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText,ButtonStyle,ContentDescription"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Button -->


        <!-- Replace SegmentedButtonRow with 3 individual buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_choose_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choose Image" />

            <Button
                android:id="@+id/btn_choose_pdf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choose PDF" />

            <Button
                android:id="@+id/btn_choose_any_file"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choose any File"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

        <!-- File Preview Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/clFilePreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_file_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:src="@drawable/file" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tv_file_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Selected File Information will come here. Choose a file using top buttons" />

                    <!-- Actions Row -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <Button
                                android:id="@+id/btn_share_file"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Share this File"
                                
                                 />

                            <Button
                                android:id="@+id/btn_download_saf_file"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Download this File (SAF)"
                                
                                
                                android:layout_marginStart="8dp" />

                            <Button
                                android:id="@+id/btn_download_direct_file"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Download this File (Direct)"
                                
                                
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Spacer -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <!-- PDF Preview Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/clPdfPreview"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Main Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pdf_preview_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/file"
                        />

                    <!-- Actions Row for PDF -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:paddingHorizontal="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_share_pdf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Share this PDF"
                                
                                 />

                            <Button
                                android:id="@+id/btn_download_saf_pdf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Download this PDF (SAF)"
                                
                                
                                android:layout_marginStart="8dp" />

                            <Button
                                android:id="@+id/btn_download_direct_pdf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Download this PDF (Direct)"
                                
                                
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <!-- Navigation Buttons -->
                <ImageButton
                    android:id="@+id/btn_pdf_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:background="@color/purple_700"
                    android:padding="8dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/back"
                    app:tint="@color/white" />

                <ImageButton
                    android:id="@+id/btn_pdf_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:background="@color/purple_700"
                    android:padding="8dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/forward"
                    app:tint="@color/white" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Spacer -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <!-- Image Preview Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/clImagePreview"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_preview_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/image_placeholder" />

                <!-- Actions Row for Image -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:paddingHorizontal="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_share_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share this Image"
                            
                             />

                        <Button
                            android:id="@+id/btn_download_saf_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download this Image (SAF)"
                            
                            
                            android:layout_marginStart="8dp" />

                        <Button
                            android:id="@+id/btn_download_direct_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download this Image (Direct)"
                            
                            
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
